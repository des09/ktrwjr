<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:k="urn:import:bufferings.ktr.wjr.client.ui.widget">

  <ui:style>
    .titlePanel {
      padding-left: 5px;
    }
  </ui:style>

  <ui:style
    field="resultBarStyle"
    type="bufferings.ktr.wjr.client.ui.WjrResultPanel.ResultBarStyle">
      .notyet {
        border: solid 1px gray;
        background-color: white;
      }
      
      .fail {
        border: solid 1px gray;
        background-color: red;
      }
      
      .succeed {
        border: solid 1px gray;
        background-color: lime;
      }
    </ui:style>

  <g:DockLayoutPanel>
    <g:north
      size="23">
      <g:HorizontalPanel
        styleName="ui-widget ui-widget-header ui-corner-top {style.titlePanel}"
        width="100%"
        height="25px"
        spacing="1">
        <g:cell
          verticalAlignment="ALIGN_MIDDLE">
          <g:HTML
            styleName="ui-widget">Result</g:HTML>
        </g:cell>
      </g:HorizontalPanel>
    </g:north>

    <g:center>
      <g:VerticalPanel
        styleName="ui-widget ui-widget-content ui-corner-bottom"
        width="100%"
        spacing="3">

        <g:cell
          horizontalAlignment="ALIGN_CENTER">
          <g:HorizontalPanel
            width="95%"
            spacing="1">

            <k:WjrIconTextLabel
              icon="ui-icon-document"
              ui:field="runsLabel" />

            <k:WjrIconTextLabel
              icon="ui-icon-close"
              ui:field="errorsLabel" />

            <k:WjrIconTextLabel
              icon="ui-icon-notice"
              ui:field="failuresLabel" />
          </g:HorizontalPanel>
        </g:cell>

        <g:cell
          horizontalAlignment="ALIGN_CENTER">
          <g:HorizontalPanel
            width="95%"
            spacing="1">
            <g:Label
              ui:field="resultBar"
              width="100%"
              height="16px"
              styleName="{resultBarStyle.notyet}" />
          </g:HorizontalPanel>
        </g:cell>
      </g:VerticalPanel>
    </g:center>
  </g:DockLayoutPanel>
</ui:UiBinder>
